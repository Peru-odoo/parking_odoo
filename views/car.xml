<?xml version='1.0' encoding='utf-8'?>
<odoo>
    
    <record id='view_car_form' model='ir.ui.view'>
        <field name='name'>parking_management.car.form</field>
        <field name='model'>parking_management.car</field>
        <field name='arch' type='xml'>
            <form>
                <sheet>
                    <group>
                        <field name='name' />
                        <field name='number_plate' />
                        <field name='tag_id' />
                        <field name='out_sum' />
                        <field name='in_sum' />
                        <field name='location' />
                        <field name='state' />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id='view_car_tree' model='ir.ui.view'>
        <field name='name'>parking_management.car.tree</field>
        <field name='model'>parking_management.car</field>
        <field name='arch' type='xml'>
            <tree>
                <field name='name' />
                <field name='number_plate' />
                <field name='tag_id' />
                <field name='out_sum' />
                <field name='in_sum' />
                <field name='location' />
                <field name='state' />

            </tree>
        </field>
    </record>

    <record id='action_car' model='ir.actions.act_window'>
        <field name="name">Quản lý xe</field>
        <field name="type">ir.actions.act_window</field>
        <field
            name="res_model">parking_management.car</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="search_view_id">parking_management.car</field> -->
    </record>
    <menuitem
        id='menu_parking_management_car'
        name='Quản lý xe'
        sequence='10'
        action='action_car'
        parent='menu_parking_management_operations' />
</odoo>