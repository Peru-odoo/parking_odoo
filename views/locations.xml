<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id='view_locations_form' model='ir.ui.view'>
        <field name='name'>parking_management.locations.form</field>
        <field name='model'>parking_management.locations</field>
        <field name='arch' type='xml'>
            <form>
                <sheet>
                    <group>
                        <field name='name' />
                        <field name='tag_id' />
                        <field name='state' />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id='view_locations_tree' model='ir.ui.view'>
        <field name='name'>parking_management.locations.tree</field>
        <field name='model'>parking_management.locations</field>
        <field name='arch' type='xml'>
            <tree>
                <field name='name' />
                <field name='tag_id' />
                <field name='state' />

            </tree>
        </field>
    </record>

    <record id='action_locations' model='ir.actions.act_window'>
        <field name="name">Quản lý vị trí</field>
        <field name="type">ir.actions.act_window</field>
        <field
            name="res_model">parking_management.locations</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="search_view_id">parking_management.car</field> -->
    </record>
    <menuitem
        id='menu_parking_management_locations'
        name='Quản lý vị trí'
        sequence='10'
        action='action_locations'
        parent='menu_parking_management_master_data' />
</odoo>